# OBS Banking System Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
MYSQL_ROOT_PASSWORD=your_secure_database_password_here
MYSQL_DATABASE=obs_banking
MYSQL_USER=obs_user
MYSQL_PASSWORD=your_mysql_user_password_here

# Email Configuration (SMTP Credentials)
MAIL_USERNAME=your_email@domain.com
MAIL_PASSWORD=your_app_specific_password_here

# JWT Configuration
JWT_SECRET=your_secure_jwt_secret_key_here_at_least_32_characters
JWT_EXPIRATION=86400000

# Server Configuration
SERVER_PORT=8080
FRONTEND_PORT=3000